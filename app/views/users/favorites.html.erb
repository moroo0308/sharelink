<div class="user_show_all">
	<%= render 'users/userlist',user:@user %>
	<div class="user_show_right">
		<div class="user_allbookmark">
			<div class="user_title">
				<h3>FAVORITE</h3>
			</div>
			<div class="user_favorite">
				<div class="user_favorite_box">
					<% @favorites.each do |favorite| %>
					<% book = Book.find_by(id: favorite.book_id) %>
					<div class="user_favorite_box1">
						<%= link_to book_path(book.id) do %>
						<div class="user_favorite_bookmarks_image">
						</div>
						<% end %>
						<div class="user_favorite_article">
							<p><%= book.category %></p>
							<h3><%= book.article %></h3>
						</div>
						<div class="user_favorite_name">
							<div class="user_favorite_date"></div>
							<span>TEXT BY</span>
							<a><%= book.user.name %></a>
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>