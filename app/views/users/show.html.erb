<div class="user_show_all">
	<%= render 'users/userlist',user:@user %>
	<div class="user_show_right">
		<div class="user_allbookmark">
			<div class="user_title">
				<h3>BOOKMARK</h3>
			</div>
			<div class="user_bookmark">
				<div class="user_bookmark_box">
					<div id="user_show_filterbtn">
						<a href="javascript:void(0);" class="allitem">All</a>
						<a href="javascript:void(0);" class="htmlcss">HTML&CSS</a>
						<a href="javascript:void(0);" class="rubyonrails">RUBY ON TAILS</a>
						<a href="javascript:void(0);" class="javascript">JAVASCRIPT</a>
						<a href="javascript:void(0);" class="github">GITHUB</a>
					</div>
					
					
					<div id="user_show_filterList">
						<% @user.books.each do |book| %>
						<ul>
							<li><%= book.category %></li>
							<li><%= book.article %></li>
							<li><%= text_url_to_link(h(book.url)).html_safe %></li>
							<li><%= book.comment %></li>
							<li><%= book.created_at %></li>
							
						</ul>
						<% end %>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
