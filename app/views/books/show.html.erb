<header>
    <div id="header">
       <button id="button">MENU</button>
    </div>
  </header>
<div class="book_show_center">
	<div class="book_show_box1">
		<h3>BOOKMARK</h3>
	</div>
	<div class="book_show_box2">
		<h3>ブックマーク</h3>
	</div>
	<div class="book_show_all">
		<div class="book_show_box_left">
			<%= attachment_image_tag @book, :image,format: 'jpeg' %>
		</div>
		<div class="book_show_box_right">
			<div class="book_show_box3">
				<h3>ARICLE</h3>
				<%= @book.article %>
			</div>
			<div class="book_show_box3">
				<h3>CATEGORY</h3>
				<p>カテゴリー</p>
			</div>
			<div class="book_show_box3">
				<h3>URL</h3>
				<%= text_url_to_link(h(@book.url)).html_safe %>
			</div>
			<div class="book_show_box3">
				<h3>NAME</h3>
				<%= @book.user.name %>
			</div>
			<div>
				<%= link_to "EDIT",edit_book_path(@book.id) %>
			</div>
			
		</div>
	</div>
</div>
