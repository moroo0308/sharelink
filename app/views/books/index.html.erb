<div class="books_index_body1">
	<div class="books_index_pickup">
		<h2>Share Link</h2>
	</div>
</div>
<header>
    <div id="header">
       <button id="button">MENU</button>
    </div>
</header>
<div class="books_index_body2">
	<div class="books_index_allbookmark">
		<div class="books_index_category">
			<h3>NEW BOOKMARK</h3>
		</div>
		<div class="books_index_bookmarks">
			<div class="books_index_bookmarks_box">
				<% @books.each do |book| %>
				<div class="books_index_bookmarks_box1">
					<%= link_to book_path(book.id) do %>
					<div class="books_index_bookmarks_image">
						<%= attachment_image_tag book, :image,format: 'jpeg' %>
					</div>
					<% end %>
					<div class="books_index_bookmarks_name">
						<p><%= book.article %></p>
					</div>
					<div class="books_index_bookmark_category">
						<p><%= book.category %></p>
					</div>
					<div class="books_index_bookmark_url">
						<p><%= text_url_to_link(h(book.url)).html_safe %></p>
					</div>
					<div class="books_index_updated_at">
						<p><%= book.updated_at %></p>
					</div>
					<div>
						<% if Favorite.find_by(user_id:current_user.id,book_id:book.id) %>
							<%= link_to("/favorites/#{book.id}/destroy",{method: "post"}) do %>
							<span class="fa fa-heart like_btn_unlike"></span>
							<% end %>
						<% else %>
							<%= link_to("/favorites/#{book.id}/create",{method: "post"}) do %>
							<span class="fa fa-heart like_btn"></span>
							<% end %>
						<% end %>
						<span><%= @favoritescount %></span>

					</div>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
